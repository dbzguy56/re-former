<%= form_for @user do |f| %>
  <ul class = "errors">
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  Username: <%= f.text_field :username, placeholder: "My name" %><br>
  Email: <%= f.text_field :email, placeholder: "My@email.yay" %><br>
  Password: <%= f.password_field :password, placeholder: "password" %><br>
  <%= f.submit "Create" %>
<% end %>
